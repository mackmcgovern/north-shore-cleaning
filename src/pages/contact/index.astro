---
import MainLayout from '../../layouts/MainLayout.astro'
import ContactForm from '../../components/ContactForm.astro'
---

<MainLayout pageHeading='Contact' showHeading>
  <main class='container'>
    <div class='mx-auto main-layout'>
      <div class='flex flex-col items-center gap-12 px-2'>
        <p>
          Questions or concerns? Let us know! Fill out the form below and a

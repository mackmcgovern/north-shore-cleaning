---
import MainLayout from '../layouts/MainLayout.astro'
import ImageSlider from '../components/ImageSlider.astro'
import { Icon } from 'astro-icon'
import heroImg from '../assets/hero-2.jpg'
import { Image } from 'astro:assets'
---

<MainLayout>
  <section
    class='relative mt-[100px] sm:mt-0 h-[60vh] sm:h-[88vh] min-h-[500px] text-center md:text-left'>
    <div
      class='absolute bg-teal-main top-0 left-0 right-0 bottom-0 overlay-shape'>
    </div>
    <div
      class='absolute top-0 left-0 right-0 bottom-0 teal-overlay-dark flex items-center'>
      <div class='absolute top-0 left-0 right-0 bottom-0 container'>
        <div
          class='flex flex-col md:flex-row justify-center items-center gap-y-12 md:gap-y-11 gap-x-32 md:justify-between md:items-center translate-y-0 container max-w-6xl h-full mx-auto px-4'>
          <div>
            <h1
              class='uppercase text-[2.7rem] md:text-6xl leading-[1] text-white mb-6 md:mb-4 drop-shadow-md font-[400] sm:font-[300]'>
              Cleaning<br /><span class='text-accent-gold font-[400]'
                >Done Right</span
              >
            </h1>
            <p
              class='text-white tracking-wider md:text-lg max-w-[350px] sm:max-w-lg font-[300] drop-shadow-sm'>
              Our team of experienced cleaners specializes in high-volume and
              fast-paced environments, ensuring a five-star quality clean every
              time.
            </p>
          </div>
          <a href='/contact' class='btn btn-outline shrink-0'>Get a quote</a>
        </div>
      </div>
    </div>
    <Image
      src={heroImg}
      alt='living room with dining table, chairs, and a couch'
      format='avif'
      quality={'mid'}
      class='object-cover h-full w-full'
      widths={[540, 800, 1600, 2000, heroImg.width]}
      sizes='(max-width: 540px) 540px,(max-width: 800px) 800px, (max-width: 1600px) 1600px, (max-width: 2000px) 2000px, 100vw'
      loading='eager'
    />
  </section>
  <!-- Services Section  -->
  <section class='py-12 sm:py-14 flex flex-col items-center container'>
    <h2 class='text-teal-main text-3xl sm:text-[2.3rem] font-[300]'>
      Our Services
    </h2>
    <div
      class='flex flex-col sm:flex-row gap-y-12 justify-between items-center w-[60%] max-w-[380px] services py-16 sm:py-24'>
      <div>
        <Icon name='house' />
        <p>Hospitality<br /> Cleaning</p>
      </div>
      <div>
        <Icon name='cleaning' />
        <p>Commercial <br />Cleaning</p>
      </div>
    </div>
    <a href='/services' class='btn btn-light'>Learn More</a>
  </section>
  <!-- ABOUT  -->
  <section class='py-11 sm:py-14 bg-teal-main bg-opacity-90'>
    <h2 class='text-white text-3xl sm:text-[2.3rem] font-[300] text-center'>
      About Us
    </h2>
    <div class='w-[90%] max-w-[57rem] py-4 sm:py-6 container'>
      <p class='text-white text-center font-[300] text-balance'>
        April Schultz is the owner and president of North Shore Cleaning
        Services, Inc. She got her start in the cleaning industry when she was
        17 years old working as a housekeeper for the historic Lutsen Lodge
        located on the North Shore. In her adult years, April worked in the
        medical field, but felt a calling to put her skills to use offering
        reliable and dependable cleaning services to businesses located in and
        around the Northland. For 10 years North Shore Cleaning Services has
        served clinics, realtors, residential properties, and commercial and
        vacation rental companies with their cleaning needs.
      </p>
    </div>
  </section>
  <!-- VIEW OUR WORK  -->
  <section class='pb-0 sm:pb-6 pt-6 bg-[#f2f2f2]'>
    <h2 class='text-teal-md text-center text-2xl sm:text-3xl py-6 font-[300]'>
      View Our Work
    </h2>
    <div class='container'>
      <ImageSlider />
    </div>
  </section>
  <!-- RATING  -->
  <section
    class='flex flex-col gap-4 md:gap-6 justify-center items-center py-14 md:py-16'>
    <Icon name='stars' class='w-40 md:w-48' />
    <p
      class='text-center font-[600] text-teal-md md:text-xl tracking-wider px-4 mt-2 md:mt-0'>
      Five star cleanliness rating <br class='sm:hidden' /> on Airbnb and Vrbo!
    </p>
  </section>
</MainLayout>

<style>
  .overlay-shape {
    clip-path: polygon(0 0, 0% 100%, 42% 0);
  }

  .services div {
    @apply flex flex-col items-center gap-5;
  }

  .services svg {
    @apply w-[80px];
  }

  .services p {
    @apply font-[500] text-accent-gold-md text-center leading-[1.2] uppercase;
    text-shadow: 0 0 1px #0e0e0e1b;
  }

  @media screen and (width <= 640px) {
    .overlay-shape {
      clip-path: polygon(0 0, 0 68%, 72% 0);
    }

    .services svg {
      @apply w-[60px];
    }

    .services p {
      @apply text-[1rem];
    }
  }
</style>

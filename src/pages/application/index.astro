---
import MainLayout from '../../layouts/MainLayout.astro'
import ApplicationForm from '../../components/ApplicationForm.astro'
---

<MainLayout pageHeading='Application' showHeading>
  <main class='container'>
    <div class='main-layout m-auto'>
      <div class='flex flex-col items-center gap-12 px-2'>
        <p>
          Interested in joining the team at North Shore Cleaning Services, Inc?
          Please fill out the form and attach your resume (if applicable). A
          member of our team will get back to you as soon as possible. Thank
          you!
        </p>

        <ApplicationForm />
      </div>
    </div>
  </main>
</MainLayout>

---
// component: ContactForm
---

<form
  class='contact-form px-6 py-12 sm:px-16 sm:py-16 border-4 border-opacity-20 shadow-sm border-teal-main bg-teal-main bg-opacity-5'>
  <div>
    <label for='name'>Name:</label>
    <input type='text' id='name' name='name' required />
  </div>
  <div>
    <label for='email'>Email:</label>
    <input type='email' id='email' name='email' required />
  </div>
  <div>
    <label for='phone'
      >Phone Number <span class='font-light tracking-wider opacity-70'
        >(Format: 555-555-5555):</span
      ></label
    >
    <input
      type='tel'
      id='phone'
      name='phone'
      pattern='[0-9]{3}-[0-9]{3}-[0-9]{4}'
      required
    />
  </div>
  <div>
    <label for='subject'>Subject:</label>
    <input type='text' id='subject' name='subject' required />
  </div>
  <div>
    <label for='message'>Message:</label>
    <textarea id='message' name='message' required></textarea>
  </div>
  <div>
    <div class='form-errors my-4'></div>

    <button
      type='submit'
      class='btn btn-light bg-accent-blue self-center mt-6 w-[15rem] text-center submit-btn'
      >Submit</button
    >
  </div>
</form>

<style>
  .contact-form {
    @apply flex flex-col gap-4 max-w-6xl w-full md:w-[90%] lg:w-[80%];
  }

  .contact-form > div {
    @apply flex flex-col;
  }

  .contact-form label {
    @apply text-teal-main font-light;
  }

  .contact-form input,
  .contact-form textarea {
    @apply border border-teal-main border-opacity-50;
  }

  .contact-form input:focus,
  .contact-form textarea:focus {
    @apply bg-accent-blue bg-opacity-30;
  }

  .contact-form textarea {
    @apply h-[8rem];
  }

  .submit-btn:disabled {
    @apply opacity-50 cursor-default hover:shadow-none;
  }
</style>

<script>
  const contactForm = document.querySelector('.contact-form')
  let name = document.getElementById('name')
  let email = document.getElementById('email')
  let phone = document.getElementById('phone')
  let subject = document.getElementById('subject')
  let message = document.getElementById('message')
  const submitBtn = document.querySelector('.submit-btn')
  const formErrors = document.querySelector('.form-errors')

  contactForm.addEventListener('submit', e => {
    e.preventDefault()

    submitBtn.disabled = true
    submitBtn.textContent = 'Sending...'

    let formData = {
      name: name.value,
      email: email.value,
      phone: phone.value,
      subject: subject.value,
      message: message.value,
    }

    // Send the form data to the server
    fetch('http://localhost:3001/contact', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(formData),
    })
      .then(response => {
        if (response.ok) {
          contactForm.reset()
          location.assign('/contact/success')
          return
        } else {
          submitBtn.disabled = false
          submitBtn.textContent = 'Submit'

          return response.json()
        }
      })
      .then(data => {
        const errors = data.map(
          error => `<p class="text-sm text-red-600">${error.msg}</p>`
        )
        const displayedErrors = errors.join('')

        formErrors.innerHTML = displayedErrors
        console.log(displayedErrors)
        throw new Error(displayedErrors)
      })
      .catch(error => {
        console.error(error)
      })
  })
</script>

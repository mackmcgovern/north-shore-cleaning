---
import { Image } from 'astro:assets'
---

<div class='slider-wrapper pb-6'>
  <div class='slider-container'>
    <div class='slider'></div>
    <button class='slider-button prev-button'><span>&#8249;</span></button>
    <button class='slider-button next-button'><span>&#8250;</span></button>
  </div>
</div>

<style>
  .slider-wrapper {
    position: relative;
    width: 100%;
    max-width: 100%;
    overflow: hidden;
  }

  .slider-container {
    position: relative;
    overflow: hidden;
    max-width: 1000px;
    width: 95%;
    margin: auto;
  }

  .slider {
    display: flex;
    transition: transform 300ms ease-in;
  }

  .slider-button {
    position: absolute;
    top: 47%;
    width: 40px;
    height: 40px;
    background-color: #333333;
    color: #ffffff;
    font-size: 20px;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    opacity: 0.7;
    transition: opacity 0.3s ease;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .slider-button span {
    font-size: 26px;
  }

  .slider-button:hover {
    opacity: 1;
  }

  .prev-button {
    left: 20px;
  }

  .next-button {
    right: 20px;
  }

  @media all and (max-width: 640px) {
    .slider-button {
      top: 35%;
      width: 33px;
      height: 33px;
      transform: translateY(0);
    }

    .slider-button span {
      font-size: 22px;
    }

    .prev-button {
      left: 10px;
    }

    .next-button {
      right: 10px;
    }
  }
</style>

<script>
  // hospitality
  import Cabin from '../assets/hospitality-cabin.jpg'

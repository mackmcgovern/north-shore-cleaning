---
import { Icon } from 'astro-icon'
import Logo from './Logo.astro'

// const currentPath = new URL(Astro.request.url).pathname.slice(1)
const currentPath = new URL(Astro.request.url).pathname
---

<nav class='container border-b border-teal-main border-opacity-20'>
  <ul
    class='flex justify-between items-center nav-links md:px-4 max-w-3xl mx-auto py-1'>
    <li>
      <a
        href='/services'
        class={currentPath.includes('/services')
          ? 'nav-link active'
          : 'nav-link'}>Services</a
      >
    </li>

    <li>
      <a
        href='/'
        class='py-4 flex flex-col items-center text-center'
        aria-label='Home'>
        <Logo width='225' />
      </a>
    </li>
    <li>
      <a
        href='/contact'
        class={currentPath.includes('/contact')
          ? 'nav-link active'
          : 'nav-link'}>Contact</a
      >
    </li>
  </ul>
</nav>

<style>
  .nav-links {
    @apply uppercase text-teal-main font-light tracking-wider text-base;
  }

  .nav-links .nav-link {
    @apply hover:text-accent-gold-md transition-colors ease-in inline-block pt-10 pb-6 px-2;
  }
  .nav-link.active {
    @apply text-accent-gold-md;
  }
</style>

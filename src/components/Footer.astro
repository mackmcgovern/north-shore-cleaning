<style>
  footer p,
  .telephone-link {
    @apply text-white leading-snug opacity-70 font-[300] text-sm;
  }

  footer span {
    @apply font-[500] text-lg tracking-wider;
  }

  footer a {
    @apply hover:text-accent-gold hover:opacity-80 transition-colors ease-in-out;
  }
